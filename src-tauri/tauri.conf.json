{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "neoview",
  "version": "2.0.0",
  "mainBinaryName": "neoview",
  "identifier": "NeoView",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "NeoView",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' blob: tauri: asset: http://asset.localhost; frame-src 'self' asset: http://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' asset: http://asset.localhost blob: data: filesystem: http: https: tauri:; media-src 'self' asset: http://asset.localhost blob: data: filesystem: http: https: tauri:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "D:\\temp\\**", "C:\\Users\\**\\AppData\\**", "C:\\**", "D:\\**", "E:\\**"]
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**", "D:\\temp\\**", "C:\\Users\\**\\AppData\\**"]
    },
    "cli": {
      "description": "NeoView command line interface",
      "args": [
        {
          "name": "path",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
